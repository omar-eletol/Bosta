<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="Item"
            type="com.bosta.bostatask.domain.models.CityModel" />

        <variable
            name="IsSelected"
            type="Boolean"
            android:value="false" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:background="@{IsSelected? @drawable/selected_bg : @drawable/unselected_bg}"
            android:gravity="center"
            android:paddingHorizontal="15dp"
            android:paddingVertical="4dp"
            android:text="@{Item.cityName}"
            android:textColor="@{IsSelected? @color/pacificBlue : @color/black}"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Category" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>